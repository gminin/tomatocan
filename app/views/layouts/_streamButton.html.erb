<div class="col-xs-12" style="text-align:center">
	<% if user_signed_in? %>
		<% if current_user.id == @user.id %>
			<%= link_to "Start Your Livestream Now", "https://crowdpublishtv.herokuapp.com/" + @user.permalink, :class => 'btn btn-lg btn-warning' %>
		<% else %>
			<%= link_to "Join Livestream", "https://crowdpublishtv.herokuapp.com/" + @user.permalink, :class => 'btn btn-lg btn-warning' %>
		<% end %>

	<% else %>
		<%= link_to "Join Livestream", "https://crowdpublishtv.herokuapp.com/" + @user.permalink, :class => 'btn btn-lg btn-warning' %>
	<% end %>
</div>
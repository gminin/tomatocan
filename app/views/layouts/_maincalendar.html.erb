<%= stylesheet_link_tag "/styles/maincalendar.scss" %>

<script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = 'https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.1';
    fjs.parentNode.insertBefore(js, fjs);
  }(document, 'script', 'facebook-jssdk'));
</script>

<div class="panel panel-default">
  <div class=panel-heading>
    Upcoming Livestream Discussions
  </div>
  <% if user_signed_in? %>
    <div class=panel-body>
        <%= link_to 'Host a Livestream Discussion', new_event_path, class: "btn btn-warning", id: "tableHost calendar-create" %>
    </div>
  <% end %>
  <% if @events.count != 0 %>
    <table class="table table-hover" id=calendar>
      <tbody>
        <% @events.sort_by{|t| t.start_at}.each do |event| %>
        <% user = User.find(event.usrid) %>
        <tr>
          <td class=col-xs-5>
            <%= link_to event.name, event, id: "calendar-event", title: event.desc, 'data-toggle': "tooltip", 'data-placement': "left" %>
            <% if user_signed_in? %>
              <% if event.usrid == current_user.id %>
                <%= link_to '(Edit Event)', edit_event_path(event.id), id: "calendar-host" %> 
              <% else %>
                Hosted by: <%= link_to user.name, user.permalink, id: "calendar-host" %>
              <% end %>
            <% else %>
              <span id=calendar-host>Hosted by: <%= link_to user.name, user.permalink %></span>
            <% end %>
          </td>
          <td class=col-xs-3>
            <span id=calendar-time><%= local_time(event.start_at, '%a, %b. %d') %></span>
            <span id=calendar-time><%= local_time(event.start_at, '%l:%M%P %Z') %></span>
          </td>
          <td class=col-xs-3>
            <%= link_to "Join Discussion", "https://crowdpublishtv.herokuapp.com/" + user.permalink, class: "btn btn-primary btn-sm" %>
          </td>
          <td class=col-xs-1>
            <% facebookurl = "https://crowdpublishtv.herokuapp.com/" + user.permalink %>
            <span class="fb-share-button" data-href= <%= facebookurl %> data-layout="button" data-size="small" data-mobile-iframe="true"><a target="_blank" href=<%= facebookurl %> class="fb-xfbml-parse-ignore">Share</a></span>
            <br>
            <span><a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-text= "Watch <%= user.name %>'s livestream on <%=  event.name + "," %> starting <%= event.start_at.strftime("%B %d, %I:%M %p")%> MST: <%= facebookurl %>" data-show-count="false">Tweet</a><script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script></span>
          </td>  
        </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>

<script>
  $(function () {
    $('[data-toggle="tooltip"]').tooltip()
  })
</script>